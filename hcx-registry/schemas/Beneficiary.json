      "required": [
        "mobile"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "mobile": {
          "type": "string",
          "pattern": "^[0-9]{10}$"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "payor_details":{
          "type":"array",
          "items":{
            "type":"object"
          }
        }
      }
    }
  },
  "_osConfig": {
    "ownershipAttributes": [
      {
        "email": "/mobile",
        "mobile": "/mobile",
        "userId": "/mobile"
      }
    ],
    "uniqueIndexFields": [
      "mobile"
    ],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt"
    ],
    "deleteRoles": [
      "anonymous"
    ],
    "inviteRoles": [
      "anonymous"
    ],
    "roles": ["anonymous"]
  }
